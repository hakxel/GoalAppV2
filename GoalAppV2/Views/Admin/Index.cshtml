<h2>User Claims</h2>
<br />

@if (User.Identity.IsAuthenticated)

{

    <table class="table table-sm">

        @foreach (var claim in User.Claims)

        {

            <tr>

                <td>@claim.Type</td>

                <td>@claim.Value</td>

            </tr>

        }

    </table>


    <a asp-area="" asp-controller="Admin" asp-action="UserManagement">Manage Users</a>

}