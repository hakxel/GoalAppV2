@model NotesListViewModel

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Note" asp-action="Update" method="post">

            <input asp-for="@Model.Note.Id" class="form-control" type="hidden" />
            <input asp-for="@Model.Note.CreatedBy" class="form-control" type="hidden" />

            <div class="form-group">
                <label asp-for="@Model.Note.Title" class="control-label"></label>
                <input asp-for="@Model.Note.Title" class="form-control" />
                <span asp-validation-for="@Model.Note.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Note.Description" class="control-label"></label>
                <input asp-for="@Model.Note.Description" class="form-control" />
                <span asp-validation-for="@Model.Note.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
