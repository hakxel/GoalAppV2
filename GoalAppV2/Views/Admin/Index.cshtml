@model UserDetailsViewModel

<h3>Current User Details</h3>
<br />
<partial name="_UserDetailsPartial" model="@Model"/>

<br />
<br />

<h3>User Claims</h3>
<br />

@if (User.Identity.IsAuthenticated)

{

    <table class="table table-sm">

        @foreach (var claim in User.Claims)

        {

            <tr>

                <td>@claim.Type</td>

                <td>@claim.Value</td>

            </tr>

        }

    </table>


    <a asp-area="" asp-controller="Admin" asp-action="UserManagement" class="btn btn-info">Manage Users</a>

}